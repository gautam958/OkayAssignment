@model IEnumerable<OkayAssignment.ViewModel.TransactionVM>

@{
    ViewData["Title"] = "Index";
}
 
<p>
    <a asp-action="Create">New Sale</a>
</p>
<table class="table table-sm table-striped table-hover border-bottom">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.transaction.TransactionId)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.propertyid)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.transaction.property.PropertyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transaction.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transaction.TransactionDate)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.transaction.TransactionId)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.propertyid)
                    </td>*@
                    <th>
                        @Html.DisplayFor(model => item.transaction.property.PropertyName)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.transaction.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.transaction.TransactionDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.transaction.TransactionId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.transaction.TransactionId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.transaction.TransactionId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">
                    No Sale Record(s) found.
                </td>
            </tr>
        }
        </tbody>
</table>
