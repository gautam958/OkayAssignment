@using OkayAssignment.ViewModel  
@model OkayAssignment.ViewModel.TransactionVM

@{
    ViewData["Title"] = "Create";
}

 
<h4>Add Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.transaction.PropertyId" class="control-label"></label>
                <select asp-for="@Model.transaction.PropertyId" class="dropdown-header"
                        asp-items="@(new SelectList(ViewBag.ListofavailableProduct,"PropertyId","PropertyName"))">
                </select>
                <span asp-validation-for="@Model.transaction.PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.transaction.UserId" class="control-label"></label>
                <input type="text" asp-for="@Model.transaction.UserId"  class="custom-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.transaction.TransactionDate" class="control-label"></label>
                <input asp-for="@Model.transaction.TransactionDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd HH:mm:ss")" />
                <span asp-validation-for="@Model.transaction.TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
